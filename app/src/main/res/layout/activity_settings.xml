<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="68dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#FF9800"
                    android:text="@string/gps_status"
                    android:textColor="#FAF6F6" />

                <Button
                    android:id="@+id/button01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="#FF9800"
                    android:shadowColor="#423434"
                    android:text="@string/gps_settings"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#372626" />

                <Button
                    android:id="@+id/button02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="#FF9800"
                    android:text="@string/logout"
                    android:textColor="#FAF6F6" />

                <Button
                    android:id="@+id/button03"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="-24dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="100dp"
                    android:background="#FFFEFE"
                    android:gravity="center"
                    android:text="@string/delete_account"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#D60505"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/top_corner_curve"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/bottom_item_selector"
        app:menu="@menu/navigation_menu" />



</RelativeLayout>